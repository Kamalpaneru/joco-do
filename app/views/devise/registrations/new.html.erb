<div class="access-form">
  <div class="ui top attached header">
    <h2>Sign up</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html:{ class: "ui form attached segment" }) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: "Email" %>
  </div>
  <div class="field">
      <%= f.input :password, required: true, hint: ("<br> #{@minimum_password_length} characters minimum" if @minimum_password_length).html_safe, label: false, placeholder: "Password" %>
  </div>


  <div class="field">
      <%= f.input :password_confirmation, required: true, label: false , placeholder: "Password Confirmation" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "ui fluid blue button" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
